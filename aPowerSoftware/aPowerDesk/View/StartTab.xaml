<c:DocumentControl x:Class="aPowerDesk.View.StartTab"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:aPowerDesk.View"
			 xmlns:c="clr-namespace:Albert.Power.Win32;assembly=AlbertWPF"
             mc:Ignorable="d" 
             d:DesignHeight="600" d:DesignWidth="960">
    <Grid Background="{StaticResource AccentBrush4}" >

		<StackPanel>
			<TextBlock Foreground="White" Margin="13,12">
				<Run FontWeight="Black" FontSize="24pt">Start Page</Run>
				<LineBreak />
				<Line Margin="0,7" X1="0" X2="500" Stroke="White"  />
				<LineBreak />
				<Hyperlink Click="hyper_Click" Tag="txt">Create a New Text Document</Hyperlink>
				<LineBreak />
					<Hyperlink Click="hyper_Click" Tag="writer">Create a New Writer  Document</Hyperlink>
				<LineBreak />
				
				<Hyperlink Click="hyper_Click" Tag="txt2">Open Text Document</Hyperlink>
			</TextBlock>
		</StackPanel>
		
		
		
    </Grid>
</c:DocumentControl>
